<header id="header" class="transparent-header page-section dark">
  <div id="header-wrap">
    <div class="container clearfix">
      <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

      <div id="logo">
        <a href="index.html" class="standard-logo" data-dark-logo="/assets/logo-dark.png"><img src="/assets/logo.png" alt="Botanist Toolbelt"></a>
        <a href="index.html" class="retina-logo" data-dark-logo="/assets/logo-dark@2x.png"><img src="/assets/logo@2x.png" alt="Botanist Toolbelt"></a>
      </div>


      <nav id="primary-menu">
        <ul class="one-page-menu">
          <li class="current"><a href="#" data-href="#header"><div>Home</div></a></li>
          <li><a href="#" data-href="#section-features"><div>About</div></a></li>
          <li><a href="#" data-href="#section-features"><div>About</div></a></li>
          <li><a href="#" data-href="#section-pricing"><div>Contact</div></a></li>
        </ul>
      </nav>
    </div>
  </div>

</header>

<section id="slider" class="slider-parallax full-screen dark" style="background: url(/assets/landing/static.jpg) center center no-repeat; background-size: cover">
  <div class="slider-parallax-inner">
    <div class="container vertical-middle clearfix">
      <div class="heading-block title-center nobottomborder">
        <h2>
          <div class="text-rotater" data-separator="|" data-rotate="bounceIn" data-speed="2500">
              <span class="t-rotate color">
              <% @families.each do |family| family.scientific_name  %>
              <%= family.scientific_name %> |
              <% end  %></span>
          </div>
        </h2>

        <span>      </span>

        <div class="allmargin">
        </div>

<ul class="one-page-menu">

        <a href="#" data-href="#section-features" class="button button-3d button-teal button-xlarge nobottommargin"><i class="icon-star3"></i> Begin with Key to Families  <i class="icon-star3"></i></a> - OR -
      </div>
</ul>
      <div class="contact-widget col_half divcenter" id="typeahead-div">
        <form class="nobottommargin" method="post" id="typeahead-form" name="" novalidate="novalidate">
          <div class="col_full">
            <div
            class="col-md-12"
            id="popover"
            data-toggle="popover"
            data-placement="top"
            data-content="And here's some amazing content. It's very engaging. right?"
            data-original-title="A Title"
            ></div>
            <div class="col-md-10" id="prefetch">
              <input class="sm-form-control tt-input" id="typeahead" type="text" name="keyword" placeholder="Search for families, species and plants" autocomplete="off" spellcheck="false" dir="auto">
            </div>

            <div class="col-md-2">
              <button
              class="button button-3d nomargin"
              type="submit"
              value="submit">Search</button>
            </div>
          </div>
        </form>
        <br><br>
        <div class="topmargin-lg">
          <%= render partial: "layouts/counters" %>
        </div>
      </div>

    </div>
  </div>
</section>
