<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">

      <div class="title-block">
        <h1><span><%= @species.scientific_name %></span></h1>
        <span><%= @species.common_name %></span>
      </div>

      <% if @species.image_url %>
        <div class="col-md-<%= @col_width %>">
          <img src="<%= @species.image_url %>">
        </div>
      <% end %>

      <% @species.description.split('. ').each do |attr| %>
        <div class="col-md-<%= @col_width %> group-attr">
          <div class="fancy-title title-border bottommargin-sm"><h4><span><%= attr.split(': ')[0] %></span></h4></div>
          <%= attr.split(': ')[1] %>
        </div>
      <% end %>

      <div class="col-md-6 divider divider-center"><i class="icon-cloud"></i></div>
    </div>
  </div>
</section>